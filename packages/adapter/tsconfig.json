{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"baseUrl": ".",
		"skipLibCheck": true,
		"lib": ["ESNext.AsyncIterable", "ESNext"]
	},
	"include": ["src", "ambient.d.ts", "global.d.ts", "rollup.config.js"],
	"exclude": ["node_modules", "dist"]
}
